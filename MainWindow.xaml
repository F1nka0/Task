<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Gray">
    
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Name="MainContainer" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ListBox Name="ListHolder" HorizontalAlignment="Left" VerticalAlignment="Top" MinHeight="100" MinWidth="100"></ListBox>
            <Button Name="AddToList" Click="AddToList_Click"  HorizontalAlignment="Center" VerticalAlignment="Top" Content="Добавить" Padding="10"></Button>
            <Button Name="Calculate" Click="Calculate_Click"  HorizontalAlignment="Center" VerticalAlignment="Top" Content="Рассчитать" Padding="10"></Button>
        </StackPanel>
        <Label Content="Вместимость контейнера равняется 1000 кг" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
