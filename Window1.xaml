<Window x:Class="WpfApp2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Window1" Height="250" Width="400" Background="Gray">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <TextBox Name="ProdName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Название" VerticalAlignment="Top" MinWidth="80" Margin="5"/>
            <TextBox Name="Price" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Цена" VerticalAlignment="Top" MinWidth="80" Margin="5"/>
            <TextBox Name="Amount" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Количество" VerticalAlignment="Top" MinWidth="80" Margin="5"/>
            <TextBox Name="Weight" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Вес" VerticalAlignment="Top" MinWidth="80" Margin="5"/>
            <Button Name="Add" Content="Добавить" Click="Add_Click"></Button>
            <Label Name="ErrorMessage" Foreground="red"></Label>
        </StackPanel>
    </Grid>
</Window>
